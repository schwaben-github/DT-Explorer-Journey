body {
  background: rgb(242, 240, 232);
  color: #ffffff;
  font-size: 1.3rem;
  text-align: justify;
  margin: 20px;
  padding: 20px;
  border-radius: 5px;
  box-sizing: border-box;
  -webkit-box-shadow: 10px 10px 5px 0px rgba(0,0,0,0.75);
  -moz-box-shadow:    3px 3px 5px 6px #ccc;  /* Firefox 3.5 - 3.6 */
  box-shadow:         3px 3px 5px 6px #ccc;  /* Opera 10.5, IE 9, Firefox 4+, Chrome 6+, iOS 5 */
}

/* The header element is a block level element and sort of container so i gave it a margin auto and a width of 80% same as the main element so they'd line up. */
header {
  width: 80%;
  margin: auto;
  padding: 2px 10px;
  background: rgb(221, 73, 36) url("../images/flywheel.jpg") top center / cover no-repeat;
  color: rgb(242, 240, 232);
  text-align: center;
  border-radius: 5px;
  box-sizing: border-box;
  -webkit-box-shadow: 10px 10px 5px 0px rgba(0,0,0,0.75);
  -moz-box-shadow:    3px 3px 5px 6px #ccc;  /* Firefox 3.5 - 3.6 */
  box-shadow:         3px 3px 5px 6px #ccc;  /* Opera 10.5, IE 9, Firefox 4+, Chrome 6+, iOS 5 */
}

/* The h1 element has the text-transform: uppercase; style and a letter-spacing: 0.2em; to give it some clarity and makes it easy to read. */
header h1 {
  font-size: 3.5rem;
  font-weight: 500;
  font-variant: small-caps;
  letter-spacing: 0.1em;
}

/* I omited the float: left; from the nav element because it throws an error when paired with the display: inline-block; */
nav {
  display: inline-block;
  margin: 20px 0px 20px 0px;
  padding: 10px;
  word-spacing: 0.2em;
}

/* The a elements have their own color. */
nav a {
  color: rgb(12, 1, 1);
  text-decoration: none;
  font-size: 1.3rem;
  font-variant: small-caps;
  font-weight: 400;
  letter-spacing: 0.2em;
  margin: 20px;
  padding: 5px 15px;
  background-color: rgba(56, 53, 53, 0.4);
  transition: 1.1s linear;
  /* transition-delay: 1s; */
}

nav a:hover {
  background: none;
  text-decoration: underline  rgb(255, 255, 255);
  color: rgb(17, 16, 16);
  outline: none;
}

.active {
  background: rgb(249, 250, 250);
  color: rgb(12, 1, 1);
  text-decoration: underline solid;
}

/* The main element has a margin auto to center it and a margin-top of 20px to separate it from the header. */
main {
  background: rgba(241, 241, 236, 0.788);
  padding: 15px;
  width: 80%;
  height: 95vh;
  margin: auto;
  margin-top: 20px;
}

.left {
  float: left;
  width: 28%;
  height: 98vh;
  border-radius: 5px;
  background: rgba(32, 178, 170, 0.200);
  padding: 10px;
  margin-right: 10px;
  box-sizing: border-box;
  -webkit-box-shadow: 10px 10px 5px 0px rgba(0,0,0,0.75);
  -moz-box-shadow:    3px 3px 5px 6px #ccc;  /* Firefox 3.5 - 3.6 */
  box-shadow:         3px 3px 5px 6px #ccc;  /* Opera 10.5, IE 9, Firefox 4+, Chrome 6+, iOS 5 */
}

.right {
  color: rgb(12, 1, 1);
  float: right;
  width: 70%;
  height: 98vh;
  padding: 1rem;
  box-sizing: border-box;
  border-radius: 5px;
  background: rgba(32, 178, 170, 0.200);
  -webkit-box-shadow: 10px 10px 5px 0px rgba(0,0,0,0.75);
  -moz-box-shadow:    3px 3px 5px 6px #ccc;  /* Firefox 3.5 - 3.6 */
  box-shadow:         3px 3px 5px 6px #ccc;  /* Opera 10.5, IE 9, Firefox 4+, Chrome 6+, iOS 5 */
}

/* Each h2 has their own color and a clear: both; which cleared them from being onto of the nav element. */
section h2 {
  color: rgb(12, 1, 1);
}

img {
  display: block;
  margin: 0 auto;
  width: 198px;
  height: 160px;
  border-radius: 8px;
  border: 1px solid rgb(146, 183, 194);
  padding: 5px;
}

/* Table Styles */
table {
  width: 100%;
  margin: auto;
  box-sizing: border-box;
  padding: 10px;
  background-color: #9aa6b5;
  font-family: Arial, Helvetica, sans-serif;
  -moz-border-top-radius: 5px !important;
  border-collapse: collapse;
}

/* table th {
  border-top-left-radius: 10px;
}

table th {
  border-top-right-radius: 10px;
