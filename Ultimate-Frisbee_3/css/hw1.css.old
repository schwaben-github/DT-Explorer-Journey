th {
  border: 1px solid #ddd;
  padding: 12px 0px 12px 0px;
  border-bottom: 2px solid#79bd7a;
  text-align: left;
  background-color: #8bb88c;
  color: white;
}

td:nth-child(even) {
  text-align: center;
}

tr td {
  background: #eeeaea;
  border: 1px solid #ddd;
  padding: 6px;
  font-size: 16px;
}

th:last-child {
  text-align: center;
}

tr > td:nth-child(even) {
  text-align: center;
}

tr:nth-child(odd) {
  background-color: #fffbfb;
} 

tr > td:last-child {
  text-align: center;
}

tr:not(:first-child) td {
  opacity:0.6;
}

tr:not(:first-child):hover td {
  opacity: 1;
  color: #000;
}


